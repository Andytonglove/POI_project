/* miniprogram/pages/myList/myList.wxss */
page {
    overflow: scroll;
    width: 750rpx;
}

.userInfo {
    background-color: #ffffff;
    width: 100%;
    height: 150px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.userName {
    margin-top: 5px;
    font-size: 18px;
}

.userAvatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid #fff;
    box-shadow: 0px 1px 5px #c9c6c6;
}

.divider {
    border: 3px solid #f7f6fc;
}


.isEmpty {
    background-color: #ffffff;
    width: 100%;
    height: 150px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #c9c9c9;
    font-size: 14px;
    padding-top: 60px;
}

.isEmpty-image {
    width: 150px;
    height: 150px;
}


/* 日志卡片 */

.item {
    margin-right: 16px;
}

.item-top {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 10px 20px 30rpx 20px;
}

.item-icon {
    width: 8px;
    height: 8px;
    background-color: #007ae7;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 15px;
}

.item-title {
    font-size: 18px;
}

.item-bottom {
    border-left: 1px solid #dedede;
    margin-left: 24px;
    padding-left: 15px;
    padding-bottom: 6px;
}

.item-address {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    line-height: 14px;
    font-size: 12px;
    color: #4d4d4d;
    margin-bottom: 30rpx;
}

.type {
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    line-height: 14px;
    font-size: 12px;
    display: inline-block;
    color: #7795f8;
}  

.item-content {
    line-height: 22px;
    font-size: 14px;
    margin-bottom: 30rpx;
}

.item-swiper {
    margin: 5px 0px 0px 0px;
    padding-bottom: 5px;
    width: 300px;
    height: 200px;
}

/* .item-images {
    width: 250px;
    height: 200px;
} */

.imgList {
    display: flex;
    flex-direction: row;
    justify-content: start;
    align-items: center;
}

.img {
    width: 271rpx;
    height: 271rpx;
    margin: 0px 5px 0px;
}