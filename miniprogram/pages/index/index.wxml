<!-- 新手引导弹出层 -->
<map id="map" class="map" enable-building="true" enable-3D="true">
    <!-- 新增的搜索框 -->
    <view>
        <van-search class="searchline" placeholder=""></van-search>
    </view>
    <!-- 发现周边 -->
    <view>
        <van-button class="nearStore" size="small" plain type="primary" icon="location" round>发现周边</van-button>
    </view>
    <!-- 问题数量表 -->
    <cover-view class="numberList">
        <cover-view class="numberList-item">
            <cover-image class="numberList-item-image" src="../../images/home/design.png"></cover-image>
            <cover-view class="numberList-item-text">
                3
                <cover-view style="font-size:10px;">开放</cover-view>
            </cover-view>
        </cover-view>
        <cover-view class="numberList-item-line"></cover-view>
        <cover-view class="numberList-item">
            <cover-image class="numberList-item-image" src="../../images/home/occupy.png"></cover-image>
            <cover-view class="numberList-item-text">
                4
                <cover-view style="font-size:10px;">异常</cover-view>
            </cover-view>
        </cover-view>
        <cover-view class="numberList-item-line"></cover-view>
        <cover-view class="numberList-item">
            <cover-image class="numberList-item-image" src="../../images/home/error.png"></cover-image>
            <cover-view class="numberList-item-text">
                5
                <cover-view style="font-size:10px;">维护</cover-view>
            </cover-view>
        </cover-view>
    </cover-view>

    <!-- 定位 -->
    <cover-view class="getLocation">
        <cover-image src="../../images/home/getLocation.png"></cover-image>
    </cover-view>
    <!-- 帮助 -->
    <cover-view class="helpButton">
        <cover-image src="../../images/home/help.png"></cover-image>
    </cover-view>
    <!-- 待办列表按钮 -->
    <cover-view class="todolist">
        <cover-image src="../../images/home/todolist-red.png"></cover-image>
    </cover-view>
    <!-- 采集者/核验者 转换按钮 -->
    <cover-view class="transWorkType">
        <cover-image src="../../images/home/verifier.png"></cover-image>
    </cover-view>

    <cover-view class="tips-image" bindtap="onCloseIntroduction">
        <cover-image src="../../images/intro/new-tips3.png" class="tips" mode="widthFix"></cover-image>
        <cover-image src="../../images/intro/new-nav2.png" class="nav" mode="widthFix"></cover-image>
    </cover-view>
</map>