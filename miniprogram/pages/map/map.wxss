/* 自定义气泡 */

.customCallout {
  background-color: rgba(277, 277, 277, 0.9);
  padding: 10rpx;
  border-radius: 10rpx;
  z-index: 10000;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.customCallout-image {
  width: 180rpx;
  height: 180rpx;
}

.customCallout-text {
  width: 180rpx;
  font-size: 20rpx;
  margin-top: 6rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.trangle {
  position: absolute;
  bottom: -14px;
  width: 0;
  height: 0;
  border-left: 15px solid transparent;
  border-right: 15px solid transparent;
  border-top: 15px solid rgba(277, 277, 277, 0.9);
}