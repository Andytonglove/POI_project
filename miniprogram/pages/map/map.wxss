/* 顶部添加我的小程序提示 */
.add_me {
  font-size: 30rpx;
  color: #fff;
  background-color: rgb(62, 207, 142);
  width: 450rpx;
  padding: 20rpx;
  position: absolute;
  right: 10rpx;
  top: 20rpx;
  text-align: center;
}

.nav {
  position: absolute;
  width: 300px;
  left: calc(50% - 150px);
  bottom: 40rpx;
  background-color: rgb(255, 255, 255);
  border-radius: 50rpx;
  box-shadow: 3px 3px 2px #bbbcbc;
}

/* 底部导航栏 */
.nav-tabbar {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.nav-tabbar-image {
  width: 20px;
  height: 20px;
  margin-bottom: 3px;
}

.postion-add {
  position: absolute;
  left: calc(50% - 35px);
  bottom: 15px;
  width: 70px;
  height: 70px;
  font-size: 25rpx;
  color: #fff;
  background-color: #0079e7;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}


