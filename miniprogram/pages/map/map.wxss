/* 中心标记点 */
.center {
  width: 32px;
  height: 40px;
  margin: 0 auto;
  position: relative;
  top: calc(50% - 40px);
}

/* 问题列表 */
.numberList {
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  text-align: center;
  background-color: #fff;
  box-shadow: 3px 3px 2px #bbbcbc;
}

.numberList-item {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  justify-content: center;
  align-items: center;
  padding: 10px 5px 10px 4px;
}

.numberList-item-line {
  height: 1px;
  width: 80%;
  margin: 0px auto;
  background-color: #ededed;
}

.numberList-item-image {
  width: 30px;
  margin-right: 5px;
}

.numberList-item-text {
  font-size: 14px;
}

